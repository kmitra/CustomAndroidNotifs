<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_normal_bg_tile2"
    android:padding="5dp"
    android:touchscreenBlocksFocus="false"
    android:minHeight="@android:dimen/app_icon_size">

    <ImageView android:id="@+id/normal_layout2_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:nestedScrollingEnabled="false"
        android:longClickable="false"
        android:maxWidth="@android:dimen/app_icon_size"
        android:maxHeight="@android:dimen/app_icon_size"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:src="@drawable/icon48x48"
        android:paddingRight="10dp" />

    <TextView android:id="@+id/normal_layout2_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/normal_layout2_image"
        style="Custom Notification Title"
        android:text="Temp Title"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <TextView android:id="@+id/normal_layout2_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/normal_layout2_image"
        android:layout_below="@id/normal_layout2_title"
        style="Custom Notification Text"
        android:text="Temp Content"
        android:textColor="@android:color/white"
        android:linksClickable="false" />
</RelativeLayout>

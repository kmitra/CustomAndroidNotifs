<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/curtain_red"
    android:padding="5dp">

    <ImageView android:id="@+id/normal_layout1_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:nestedScrollingEnabled="false"
        android:longClickable="false"
        android:maxWidth="@android:dimen/app_icon_size"
        android:maxHeight="@android:dimen/app_icon_size"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:src="@drawable/icon48x48"
        android:paddingRight="10dp" />

    <TextView android:id="@+id/normal_layout1_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/normal_layout1_image"
        style="Custom Notification Title"
        android:text="Temp Title"
        android:textColor="@color/foreground_material_dark"
        android:textStyle="bold" />

    <TextView android:id="@+id/normal_layout1_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/normal_layout1_image"
        android:layout_below="@id/normal_layout1_title"
        style="Custom Notification Text"
        android:text="Temp Content"
        android:textColor="@color/foreground_material_dark" />
</RelativeLayout>
